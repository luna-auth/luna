---
import Layout from '../layouts/Layout.astro';
import { getSessionError } from '../lib/session';

const sessionError = getSessionError(Astro.locals.session);
---

<Layout title="Not Found">
  <main>
    <h1>Page Not Found</h1>
    
    {sessionError && (
      <div class="error-message">
        {sessionError === 'EXPIRED' ?
          <p>Your session has expired. Please log in again.</p> :
          <p>There was a problem with your session. Please try logging in again.</p>
        }
        <a href="/login">Go to Login</a>
      </div>
    )}
    
    <a href="/">Go Home</a>
  </main>
</Layout>